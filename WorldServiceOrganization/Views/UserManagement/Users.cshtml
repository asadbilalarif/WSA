</head>




<!-- Page Wrapper -->
    <div class="content container-fluid">

        <!-- Page Header -->
        <div class="row">
                <div class="col-sm-6">
                    <div class="breadcrumb-bar">
                        <div class="container-fluid">
                            <div class="row align-items-center">
                                <div class="col-md-6 col-6">
                                    <h2 class="breadcrumb-title">USER LIST</h2>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                @*<div class="col-md-6 col-6 text-right m-b-30" id="CreateUserB">

                </div>*@
            </div>
        

        <!-- /Page Header -->

        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <a href="@Url.Action("CreateUser","UserManagement")" class="btn btn-primary "  style="float:right;"><i class="fa fa-plus"></i> Create New User</a>
                        <br /><br />
                        <div class="table-responsive">
                            <div class="table-responsive">
                                <table class="cell-border table table-hover table-center  mb-0 " id="UserTable">
                                    <thead>
                                        <tr>
                                            <th style="display:none;">User ID</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th style="display:none;">Password</th>
                                            <th>Phone Number</th>
                                            <th>Role</th>
                                            <th>Active</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (WorldServiceOrganization.Models.tblUser User in Model)
                                        {
                                            <tr>
                                                <td style="display:none;">@User.UserId</td>
                                                <td>@User.username</td>
                                                <td>@User.Email</td>
                                                <td style="display:none;">@User.PIN</td>

                                                <td>@User.PhoneNumber</td>
                                                <td>@User.tblRole.Role</td>
                                                @if (User.isActive == true)
                                                {
                                                    <td>
                                                        <span class="badge badge-primary">Active</span>
                                                    </td>
                                                    /**/

                                                }
                                                else
                                                {
                                                    <td>
                                                        <span class="badge badge-danger">In-Active</span>
                                                    </td>
                                                }

                                                <td>
                                                    <a href="@Url.Action("CreateUser","UserManagement",new {id=User.UserId })" class="text-success font-50" title="Edit"><i class="fa fa-edit" id="EditUser"></i></a>
                                                    <a href="#" class="text-danger font-50" title="Delete" data-toggle="modal" data-target="#UserDelete"><i class="fa fa-trash" id="DeleteUser"></i> </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <div id="UserDelete" class="modal fade delete-modal" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <img src="~/Content/assets/img/sent.png" alt="" width="50" height="46">
                    <input class="form-control" type="text" id="DeleteUserID" style="display:none;">
                    <h5>Are you sure want to delete this device Information?</h5>
                    <div class="m-t-20">
                        <p id="ConfigDerror" style="color:red;"></p>
                        <a href="#" class="btn btn-white" data-dismiss="modal">Close</a>
                        <input type="button" class="btn btn-danger" id="CDeleteUser" value="Delete">
                    </div>
                </div>
            </div>
        </div>
    </div>

<!-- /Page Wrapper -->
