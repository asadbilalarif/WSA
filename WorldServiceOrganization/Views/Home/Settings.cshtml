                    {@Html.AntiForgeryToken()
                    <div class="card">
                        <h2 style="color:green;">@ViewBag.Error</h2>
                        <div class="card-body">

                            <div class="row">
                                <div class="col-sm-9">
                                    <h6 class="card-title" style="background:#009efb; color:white;padding:9px !important"> Setting information</h6>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <input type="text" class="form-control" style="display:none;" name="SettingId" value="@SettingId" required>
                                        <label>Next WSA #</label>
                                        <input type="number" class="form-control" name="NextWSA" id="NextWSA" value="@NextWSA" required>
