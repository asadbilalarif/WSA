                                </div>

                            </div>

                            <div class="row">
                                
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Letter Case</label>
                                        <select class="form-control" id="LetterCase" name="LetterCase" required>
                                            @if (LetterCase == "Upper case")
                                            {
                                                <option value="Upper case" selected>Upper case</option>
                                            }
                                            else
                                            {
                                                <option value="Upper case">Upper case</option>
                                            }

                                            @if (LetterCase == "Lower case")
                                            {
                                                <option value="Lower case" selected>Lower case</option>
                                            }
                                            else
                                            {
                                                <option value="Lower case">Lower case</option>
                                            }

                                            
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>FONT style</label>
                                        <input type="text" class="form-control" id="FontStyle" name="FontStyle" value="@FontStyle" required>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>FONT Size</label>
