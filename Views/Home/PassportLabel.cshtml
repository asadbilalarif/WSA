                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <label><b>MRZ</b></label><br>
                            <div class="row">
                                <div class="col-md-4">
                                    <input type="radio" id="MRZSuppress" name="MRZSuppress" value="1">
                                    <label for="MRZSuppress">Suppress</label><br />
                                    <input type="radio" id="MRZUnSuppress" name="MRZSuppress" value="2">
                                    <label for="MRZUnSuppress">Unsuppress</label>
                                </div>
                                <div class="col-md-4">
                                    <input type="radio" id="MRZStandard" name="MRZStandard" value="1" checked>
                                    <label for="MRZStandard">Standard</label><br />
                                    <input type="radio" id="MRZNonStandard" name="MRZStandard" value="2">
                                    <label for="MRZNonStandard">Non-Standard</label>
                                </div>
                                <div class="col-md-4">
                                    <input type="radio" id="MRZMixed" name="MRZLetterCase" value="1">
                                    <label for="MRZMixed">Mixed Case</label><br />
                                    <input type="radio" id="MRZLower" name="MRZLetterCase" value="2">
                                    <label for="MRZLower">All Lowercase</label><br />
                                    <input type="radio" id="MRZUpper" name="MRZLetterCase" value="3">
                                    <label for="MRZUpper">UPPERCASE</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label><b>Issuer</b></label><br>
                            <input type="radio" id="IssuerWSA" name="Issuer" value="1" checked>
                            <label for="IssuerWSA">WSA</label><br />
                            <input type="radio" id="IssuerICAO" name="Issuer" value="2">
                            <label for="IssuerICAO">ICAO "XXX"</label>
                        </div>
                        <div class="col-md-2">
                            <label><b>Date Format</b></label><br>
                            <input type="radio" id="DateFormatName" name="DateFormat" value="1" checked>
                            <label for="DateFormatName">01 Jan 2000</label><br>
                            <input type="radio" id="DateFormatNumber" name="DateFormat" value="2">
                            <label for="DateFormatNumber">01 01 2000</label><br />

                        </div>
                        <div class="col-md-2">
                            <label>Font Size</label>
                            <input type="number" class="form-control" name="FontSize" id="FontSize" value="12" />
                        </div>
                        <div class="col-md-12 text-right">
                            <a href="@Url.Action("PassportLabel", "Home",new { id=Model.PersonIDNumber,tid= ViewBag.TL.TransactionIDNumber})"> <input class="btn btn-danger" type="button" value="Cancel"></a>
                            <a href="@Url.Action("Persons","Home",new { id=Model.PersonIDNumber })" class="btn btn-secondary"><i class="fa fa-list"></i> List</a>
                            <a href="#" id="PrintBtn" class="btn btn-primary"><i class="fa fa-print"></i> Print</a>
                            <a href="#" id="PDFBtn" class="btn btn-success"><i class="fa fa-print"></i> PDF</a>
                        </div>

                    </div>

                </div>

            </div>
            <div class="row">
                <div class="col-md-10">
                    <section id="section">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12 text-center">
                                        <p><b>WORLD GOVERNMENT OF WORLD CITIZENS</b></p><br />
                                    </div>
                                    <div class="col-md-3" style="padding:0px !important;">
                                        <p style="float:right;">Passport/Passeport</p>
                                    </div>
                                    <div class="col-md-2">
                                        <p>Type/Type</p>
                                        <p>P</p>
                                    </div>
                                    <div class="col-md-4" style="padding:0px !important;">
                                        <p>Authority code/Code d'authoritie</p>
                                        <p id="IssuerDisplay">WSA</p>
                                    </div>
                                    <div class="col-md-3" style="padding:0px !important;">
                                        <p>Passport No./No de Passeport(8)</p>
                                        <div id="draggableArea" style="width: 100px;height:30px">
                                            <div id="PNdraggable" class="ui-widget-content">
                                                <p>@ViewBag.TL.IDCode</p>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <section id="ID">
                                    <div class="row">
                                        <div class="col-md-3" id="PLIdraggableArea">
                                            <div id="PLIdraggable" class="ui-widget-content">

                                                <img id="Photo" src="@Model.Photo" alt="your image" style="width:100%; height:90%;" />
                                            </div>
                                        </div>


                                        <div class="col-md-5" id="FNdraggableArea" style="width: 100%;height:100%">
                                            <p class="FNdraggable">Name/Nom(1)</p>

                                            <div class="FNdraggable">
                                                <p>@Model.LastName</p>
                                            </div>


                                            <p class="FNdraggable">Given Names/Prenoms(2)</p>
                                            <p class="FNdraggable">@Model.FirstName</p>
                                            <p class="FNdraggable">Place ofbirth/Lieu de nalssance(3)</p>
                                            <p class="FNdraggable">@Model.CityOfBirth, @Model.tblCountry.Name</p>
                                            <p class="FNdraggable">Date ofbirth/Date de nalssance(4)</p>
                                            <p id="BDateName" class="FNdraggable">@Model.DateOfBirth.ToString("dd MMM yyyy")</p>
                                            <p id="BDateNumber" style="display:none;">@Model.DateOfBirth.ToString("dd MM yyyy")</p>
                                            <p class="FNdraggable">Gender/Sexe(5)</p>
                                            <p class="FNdraggable">@Model.tblSex.Name</p>
                                            <p class="FNdraggable">Date ofissue/Date de deliverance(6)</p>
                                            @if (@ViewBag.TL.IssueDate.Year == 9999)
                                            {
                                                <p class="FNdraggable">NILL</p>
                                            }
                                            else
                                            {
                                                <p id="IDateName" class="FNdraggable">@ViewBag.TL.IssueDate.ToString("dd MMM yyyy")</p>
                                                <p id="IDateNumber" style="display:none;">@ViewBag.TL.IssueDate.ToString("dd MM yyyy")</p>

                                            }
                                            <p class="FNdraggable">Date of expiry/Date de d'expiration(7)</p>
                                            @if (@ViewBag.TL.IssueDate.Year == 9999)
                                            {
                                                <p class="FNdraggable">NILL</p>
                                            }
                                            else
                                            {
                                                <p id="EDateName" class="FNdraggable">@ViewBag.Exp.ToString("dd MMM yyyy")</p>
                                                <p id="EDateNumber" style="display:none;">@ViewBag.Exp.ToString("dd MM yyyy")</p>

                                            }

                                        </div>
                                        <div class="col-md-4">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <img id="Photo" src="@Model.Photo" alt="your image" style="opacity: 0.5;width:40%; height:100%;float:right;" /><br />
                                                </div>
                                            </div>
                                            <br> <br><br>
                                            <p>Explanatory notes/Notes explicatives</p>
                                            <p>PAGE 5</p>
                                            <p>Renewal/Propogation(9)</p>
                                            <p>PAGE 3</p>
                                            <p>Authority/Authoritie(10)</p>
                                            <p>WORLD SERVICE AUTHORITY</p>
                                        </div>
                                    </div><br />
                                    <div id="MRZHide">
                                        <div class="row">
                                            <div class="col-md-2">

                                            </div>
                                            <div class="col-md-8">
                                                <p style="font-size:10px !important;">WORLD SERVICE AUTHORITYWORLD SERVICE AUTHORITYWORLD SERVICE AUTHORITY</p>
                                                <p class="letter">@ViewBag.Line1</p>
                                                <p class="letter">@ViewBag.Line2</p>
                                            </div>
                                            <div class="col-md-2">

                                            </div>
                                        </div>
                                    </div>
                                </section>



                            </div>

                        </div>
                    </section>

                </div>



            </div>

        </div>
    </div>
</div>




