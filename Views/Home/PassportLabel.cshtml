        }
    });

    $('input:radio[name="DateFormat"]').change(function () {
        if ($(this).val() == 1) {
            $("#BDateName").show();
            $("#IDateName").show();
            $("#EDateName").show();
            $("#BDateNumber").hide();
            $("#IDateNumber").hide();
            $("#EDateNumber").hide();

        }
        else {
            $("#BDateName").hide();
            $("#IDateName").hide();
            $("#EDateName").hide();
            $("#BDateNumber").show();
            $("#IDateNumber").show();
            $("#EDateNumber").show();
        }
    });

    $('input:radio[name="MRZLetterCase"]').change(function () {
        if ($(this).val() == 1) {
            $('#MRZHide').css('textTransform', 'capitalize');
            //document.getElementsByTagName("section").setAttribute('textTransform', 'lowercase');
        }
        else if ($(this).val() == 2) {
            $('#MRZHide').css('textTransform', 'lowercase');
            //document.getElementById("ID").setAttribute('style', 'textTransform:uppercase');
        }
        else {
            $('#MRZHide').css('textTransform', 'uppercase');
        }
    });








